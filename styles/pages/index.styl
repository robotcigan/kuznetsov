.index-wrapper
  background-color $main
  padding-bottom 32rem

.section
  background $main
  margin-bottom 12rem
  // height 100vh
  // position relative
  // z-index 100
  // font-size 20rem
  .h2
    color #fff
  p
    color #fff
    opacity .7

.service
  background-color $secondary
  color #fff
  padding 4rem
  transform-style preserve-3d
  &__img
    margin-bottom 3.2rem
    text-align center
    // transform translateZ(20px)
  &__name
    // transform translateZ(20px)
  &__desc
    color #fff
    opacity .7
    // transform translateZ(20px)

.works
  display flex
  .work
    position relative
    width 100%
    &__img
      object-fit cover
      position relative
      img
        display block
        width 100%
      &:after
        background-color $primary
        content ''
        height 100%
        left 0
        position absolute
        top 0
        transition all .3s ease
        width 0
    &__hover
      bottom 0
      color #fff
      left 0
      max-width 70%
      opacity 0
      padding 8rem 6.4rem
      position absolute
      transform translateY(4.8rem)
      transition all .3s ease
      z-index 50
    &__type
      font-size 1.6rem
      font-weight 400
      margin-bottom .8rem
    &__title
      font-family $font-header
      font-size 3.2rem
      font-weight 700
      line-height 1.2
    &:hover
      .work
        &__img
          &:after
            width 100%
        &__hover
          opacity 1
          transform none
      


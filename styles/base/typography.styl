h1
  margin 0

.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

p
  color $main
  font-size 1.4rem
  font-weight 300
  line-height 1.6
  margin-bottom 2.4rem

.h1
  font-family $font-header
  font-size 5.4rem
  line-height 1.2
  margin-bottom 2.4rem

.h2
  font-family $font-header
  font-size 5.4rem
  margin-bottom 3.2rem
  margin-top -.45em

.h3
  font-family $font-header
  font-size 3.2rem
  font-weight 600
  margin-bottom 1.6rem

.text-primary
  color $primary

.uppercase
  text-transform uppercase

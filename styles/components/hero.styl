.hero
  background-color $main
  display flex
  // overflow hidden
  height 100vh
  width 100%
  &__video
    height 100%
    left 0
    opacity .5
    overflow hidden
    position fixed
    top 0
    width 100%
    z-index 0
    video
      display block
      object-fit cover
      object-position top
      height 100%
      width 100%
  &__align
    margin-top (240 / 800 * 100)vh
    opacity 0
    position relative
    width 100%
    z-index 100
  &__container
    max-width 68rem
  .h1
    color #fff
  &__description
    color #fff
    font-size 1.6rem
    margin-bottom 3.2rem
    opacity .7

.scroll-down
  background-color rgba(#fff, .2)
  bottom 0
  display block
  height 8.8rem
  overflow hidden
  position absolute
  width 3px
  &:after
    animation scroll-down 2s infinite both ease
    background-color $primary
    content ''
    height 8.8rem
    left 0
    position absolute
    top 0
    width 3px

.some
  opacity 0
  
@keyframes scroll-down
  0%
   top -800%
  100%
    top 100%


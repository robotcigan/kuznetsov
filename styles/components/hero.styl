.hero
  background-color $main
  display flex
  // overflow hidden
  height 100vh
  position relative
  width 100%
  &:before
    animation stars 10s infinite both ease
    content ''
    background url('../../img/stars-bg.png') top center no-repeat
    background-size 100%
    height 100%
    left 0
    opacity .5
    position absolute
    top 0
    width 100%
    z-index 20
  &__bg
    // animation wave 30s infinite both linear
    height 100%
    left 0
    // opacity .8
    overflow hidden
    position fixed
    top 0
    // transition all 4s ease
    width 100%
    z-index 0
    &:before
      content ''
      background radial-gradient(500px at 50% 50%, rgba(0, 0, 0, 0) 0%, rgba(#000, 1) 200%)
      height 100%
      left 0
      position fixed
      top 0
      width 100%
    // &:after
    //   content ''
    //   background radial-gradient(500px at 50% 50%, rgba($primary, 1) 0%, rgba(#000, 0) 100%)
    //   // mix-blend-mode multiply
    //   height 100%
    //   left 0
    //   position fixed
    //   top 0
    //   transform scaleY(.5)
    //   width 100%
  &__video
    height 100%
    left 0
    opacity .5
    overflow hidden
    position fixed
    top 0
    width 100%
    z-index 0
    video
      display block
      object-fit cover
      object-position top
      height 100%
      width 100%
  &__align
    margin-top (240 / 800 * 100)vh
    opacity 0
    position relative
    width 100%
    z-index 100
  &__container
    max-width 68rem
  .h1
    color #fff
  &__description
    color #fff
    font-size 1.6rem
    margin-bottom 3.2rem
    opacity .7

.scroll-down
  background-color rgba(#fff, .2)
  bottom 0
  display block
  height 8.8rem
  overflow hidden
  position absolute
  width 3px
  &:after
    animation scroll-down 2s infinite both ease
    background-color $primary
    content ''
    height 8.8rem
    left 0
    position absolute
    top 0
    width 3px

.some
  opacity 0

@keyframes stars
  0%
    opacity .4
  25%
    opacity .7
  50%
    opacity .4
  75%
    opacity .7
  100%
    opacity .4

  
@keyframes scroll-down
  0%
   top -800%
  100%
    top 100%

@keyframes wave
  0%
    transform rotate(0)
  25%
    transform rotate(15deg)
  50%
    transform rotate(0)
  75%
    transform rotate(15deg)
  100%
    transform rotate(0)
